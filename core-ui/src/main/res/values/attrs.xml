<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="ViewPagerIndicator">
        <attr name="itemSize" format="dimension" />
        <attr name="itemScale" format="float" />
        <attr name="itemSelectedTint" format="color" />
        <attr name="itemTint" format="color" />
        <attr name="delimiterSize" format="dimension" />
        <attr name="itemIcon" format="reference" />
    </declare-styleable>

    <declare-styleable name="op_editText">
        <attr name="title" format="string" />
        <attr name="titleColor" format="color" />
        <attr name="hint" format="string" />
        <attr name="hintColor" format="color" />
        <attr name="EditTextColor" format="color" />
        <attr name="maxLength" format="integer" />
        <attr name="type" format="integer" />
        <attr name="android:inputType" />
        <attr name="android:enabled" />
    </declare-styleable>

    <declare-styleable name="CircleImageView">
        <attr name="strokeColor" format="color" />
        <attr name="strokeWidth" format="dimension" />
        <attr name="highlightEnable" format="boolean" />
        <attr name="highlightColor" format="color" />
    </declare-styleable>

    <declare-styleable name="op_spinner">
        <attr name="title1" format="string" />
        <attr name="titleColor1" format="color" />
    </declare-styleable>

    <declare-styleable name="StickyNestedScrollView">
        <attr name="stuckShadowHeight" format="dimension" />
        <attr name="stuckShadowDrawable" format="reference" />
    </declare-styleable>

    <declare-styleable name="op_button">
        <attr name="op_button_title" format="string" />
        <attr name="op_button_titleColor" format="color" />
        <attr name="op_button_bgColor" format="color" />
        <attr name="op_button_inBrand" format="boolean" />
        <attr name="op_button_isOutline" format="boolean" />
        <attr name="op_button_outlineColor" format="color" />
    </declare-styleable>

    <declare-styleable name="RoundishImageView">
        <attr name="cornerRadius" format="dimension" />
        <attr name="roundedCorners">
            <flag name="topLeft" value="1" />
            <flag name="topRight" value="2" />
            <flag name="bottomRight" value="4" />
            <flag name="bottomLeft" value="8" />
            <flag name="all" value="15" />
        </attr>
    </declare-styleable>

</resources>
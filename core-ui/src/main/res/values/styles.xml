<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:dropDownListViewStyle">@style/spinnerDropDownStyle</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="tv_style_regular_white">
        <item name="android:fontFamily">@font/montserrat_regular_font</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="tv_style_medium_white">
        <item name="android:fontFamily">@font/montserrat_medium_font</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="tv_style_light_white">
        <item name="android:fontFamily">@font/montserrat_light_font</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="tv_style_light_black">
        <item name="android:fontFamily">@font/montserrat_light_font</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="tv_style_order_pizza_black">
        <item name="android:fontFamily">@font/order_pizza_font</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="tv_style_semi_bold_white">
        <item name="android:fontFamily">@font/montserrat_semibold_font</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="tv_style_bold_white">
        <item name="android:fontFamily">@font/montserrat_bold_font</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="tv_style_marmonia_sans_cyr_white">
        <item name="android:fontFamily">@font/marmonia_sans_pro_cyr_bold_font</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="social_button" parent="@style/Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_white_rounded</item>
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_18ssp</item>
        <item name="android:paddingTop">@dimen/_16sdp</item>
        <item name="android:paddingBottom">@dimen/_16sdp</item>
        <item name="android:paddingRight">@dimen/_20sdp</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:fontFamily">@font/montserrat_light_font</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="white_button" parent="@style/Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_white_rounded</item>
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_18ssp</item>
        <item name="android:padding">@dimen/_12sdp</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/montserrat_light_font</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="op_edittext_style">
        <item name="titleColor">@color/white</item>
        <item name="EditTextColor">@color/white</item>
        <item name="hintColor">@color/edt_hint_color</item>
    </style>

    <style name="ButtonClickEffect">
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="ButtonForegroundClickEffect">
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="OPDialogStyle" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="OPGenericDialogStyle" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="searchDialogStyle" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/black</item>
    </style>

    <style name="animationDialogStyle" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="searchDialogStyleBlack" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>

        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:statusBarColor">@color/op_black</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="custom_checkbox_style" parent="@style/Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:textAppearance">@style/checkbox_text_style</item>
    </style>

    <style name="checkbox_text_style">
        <item name="android:fontFamily">@font/montserrat_light_font</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>


    <style name="spinnerDropDownItemStyle" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:fontFamily">@font/montserrat_light_font</item>
    </style>

    <style name="spinnerDropDownStyle" parent="android:style/Widget.ListView.DropDown">
        <item name="android:divider">@color/grey_line_2</item>
        <item name="android:dividerHeight">@dimen/_1sdp</item>
    </style>

    <style name="TimePickerWidgetStyle">
        <item name="android:gravity">center</item>
        <item name="android:headerBackground">@android:color/transparent</item>
        <item name="android:numbersSelectorColor">@color/clock_pink</item>
        <item name="android:numbersBackgroundColor">@color/clock_bg</item>
        <item name="android:numbersTextColor">@color/clock_black</item>
    </style>

    <style name="feedback_style">
        <item name="android:background">@color/white_15</item>
        <item name="android:fontFamily">@font/montserrat_light_font</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@color/edt_hint_color</item>
        <item name="android:paddingLeft">@dimen/_15sdp</item>
        <item name="android:paddingRight">@dimen/_15sdp</item>
        <item name="android:paddingTop">@dimen/_11sdp</item>
        <item name="android:paddingBottom">@dimen/_15sdp</item>
    </style>
</resources>
